{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stellarlauncher",
  "version": "1.1.0",
  "identifier": "com.lumen.stellarlauncher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "stellarlauncher",
        "width": 1200,
        "height": 700,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../ext/frpc"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["srlr"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyMjY3NzRBMDc2RkZDQ0IKUldUTC9HOEhTbmNtOGdOa0NMWUJoaEZ6WjlmTGlTMTdIdlNmNlpwOXBVK1ZJR0drckUrVUROTUwK",
      "endpoints": [
        "https://api.stellarfrp.top/api/v2/launch/version"
      ]
    }
  }
}
